generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  role      String
  createdAt DateTime @default(now())
}

model Order {
  id         String   @id @default(cuid())
  userId     String?  // null si guest
  items      Json
  total      Float
  status     String   // e.g. PENDING, PAID, CANCELLED
  provider   String   // stripe, paypal, coinbase
  providerId String?  // session id ou charge id
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}